<div class="product-lines scrollspy" id="nuestros-productos">
  <section class="container">
    <h2 class="section-title">Nuestros Productos</h2>

    <!-- Botones de pestañas -->
    <div class="tabs-container">
      {productLines.map((line, index) => (
        <button
          class={`tab-button ${index === 0 ? 'active' : ''}`}
          data-tab={line.id}
        >
          {line.nombre}
        </button>
      ))}
    </div>

    <!-- Contenido de cada línea -->
    {productLines.map((line, index) => (
      <div class={`tab-content ${index === 0 ? 'active' : ''}`} data-content={line.id}>
        <!-- Banner de la línea -->
        <div class="banner-container">
          <Image
            src={line.banner}
            alt={`Línea ${line.nombre}`}
            class={`line-banner ${(line.id === 'aceites-rosa-mosqueta' || line.id === 'rosa-mosqueta') ? 'banner-rosa-mosqueta' : ''} ${line.id === 'jabones' ? 'banner-jabones' : ''}`}
            loading="lazy"
            decoding="async"
            quality={100}
            width={1200}
            height={300}
          />
          <div class="banner-overlay">
            <h2 class="banner-title">{line.nombre}</h2>
          </div>
        </div>

        <!-- Grid de productos -->
        <div class="product-grid">
          {line.productos.map((producto, idx) => (
            <div class="product-card">
              <div class="product-image-container">
                <Image
                  src={producto.imagen}
                  alt={producto.alt || producto.nombre}
                  class="product-image"
                  loading="lazy"
                  decoding="async"
                  quality={100}
                  width={600}
                  height={600}
                  data-product-id={`${line.id}-${idx}`}
                />
                <button class="zoom-button" data-product-id={`${line.id}-${idx}`} data-image-alt={producto.alt || producto.nombre}>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                    <line x1="11" y1="8" x2="11" y2="14"></line>
                    <line x1="8" y1="11" x2="14" y2="11"></line>
                  </svg>
                </button>
              </div>
              <div class="product-overlay">
                <h3 class="product-name">{producto.nombre}</h3>
                {producto.precio && (
                  <p class="product-price">${producto.precio.toLocaleString('es-AR')}</p>
                )}
                <a href={producto.enlace || "#"} class="product-button">Comprar en Tienda</a>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </section>

  <!-- Modal para vista ampliada -->
  <div id="imageModal" class="image-modal">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <button class="modal-close" id="closeModal">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
      <img id="modalImage" src="" alt="" class="modal-image" />
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Tabs functionality
    const tabButtons = document.querySelectorAll<HTMLButtonElement>('.tab-button');
    const tabContents = document.querySelectorAll<HTMLDivElement>('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabId = button.getAttribute('data-tab');

        // Remover clase active de todos los botones y contenidos
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));

        // Agregar clase active al botón clickeado y su contenido correspondiente
        button.classList.add('active');
        const activeContent = document.querySelector<HTMLDivElement>(`.tab-content[data-content="${tabId}"]`);
        if (activeContent) {
          activeContent.classList.add('active');
        }
      });
    });

    // Modal functionality
    const modal = document.getElementById('imageModal') as HTMLDivElement | null;
    const modalImage = document.getElementById('modalImage') as HTMLImageElement | null;
    const closeModalBtn = document.getElementById('closeModal') as HTMLButtonElement | null;
    const modalBackdrop = document.querySelector<HTMLDivElement>('.modal-backdrop');
    const zoomButtons = document.querySelectorAll<HTMLButtonElement>('.zoom-button');

    if (!modal || !modalImage || !closeModalBtn || !modalBackdrop) {
      return;
    }

    // Abrir modal
    zoomButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const productId = button.getAttribute('data-product-id');
        const imageAlt = button.getAttribute('data-image-alt');

        if (!productId) return;

        // Buscar la imagen del producto usando el ID
        const productImage = document.querySelector<HTMLImageElement>(`.product-image[data-product-id="${productId}"]`);

        if (!productImage) return;

        // Usar la misma imagen ya cargada
        const imageSrc = productImage.src;

        // Como la imagen ya está cargada, mostrar el botón inmediatamente
        closeModalBtn.style.opacity = '1';
        closeModalBtn.style.visibility = 'visible';

        modalImage.src = imageSrc;
        modalImage.alt = imageAlt || '';
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });

    // Cerrar modal con botón X
    closeModalBtn.addEventListener('click', () => {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    });

    // Cerrar modal clickeando fuera de la imagen
    modalBackdrop.addEventListener('click', () => {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    });

    // Cerrar modal con tecla ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('active')) {
        modal.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });
</script>

