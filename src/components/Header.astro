    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    color: #64748b;
    padding: 0.625rem 1rem;
    display: inline-block;
    border-radius: 8px;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  nav ul li a:hover {
    color: #0f172a;
    background-color: rgba(0, 0, 0, 0.04);
  }

  nav ul li a.active {
