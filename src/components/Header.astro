</style>

<script>
  const hamburger = document.querySelector(".hamburger");
  const sidebar = document.querySelector(".sidebar");
  const container_sidebar = document.querySelector(".container-sidebar");
  const closeBtn = document.querySelector(".close-btn");
  const sidebarLinks = sidebar?.querySelectorAll("a") || [];
  const header = document.querySelector("header");

  function toggleSidebar() {
    if (sidebar && container_sidebar) {
      sidebar.classList.toggle("active");
      container_sidebar.classList.toggle("active");
    }
  }

  hamburger?.addEventListener("click", toggleSidebar);
  closeBtn?.addEventListener("click", toggleSidebar);

  sidebarLinks.forEach((link) => {
    link.addEventListener("click", () => {
      sidebar?.classList.remove("active");
      container_sidebar?.classList.remove("active");
    });
  });

  document.addEventListener("click", (event) => {
    const target = event.target as HTMLElement;
    if (sidebar && target && hamburger && container_sidebar) {
      if (!sidebar.contains(target) && !hamburger.contains(target)) {
        sidebar.classList.remove("active");
        container_sidebar.classList.remove("active");
      }
    }
  });

  // Add scroll effect to header
  window.addEventListener("scroll", () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 20) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  });

  // Animated border for nav links
  const navUl = document.querySelector("nav ul");
  const navLinks = document.querySelectorAll("nav ul li a");

  function updateActiveBorder() {
    const activeLink = document.querySelector("nav ul li a.active");
    if (activeLink && navUl) {
      const linkRect = (activeLink as HTMLElement).getBoundingClientRect();
      const ulRect = navUl.getBoundingClientRect();

      // Adjust to use ~80% of the width with padding offset
      const paddingOffset = 12; // Offset from each side
      const left = linkRect.left - ulRect.left + paddingOffset;
      const width = linkRect.width - paddingOffset * 2;

      (navUl as HTMLElement).style.setProperty("--border-left", `${left}px`);
      (navUl as HTMLElement).style.setProperty("--border-width", `${width}px`);
    }
  }

  updateActiveBorder();
  window.addEventListener("resize", updateActiveBorder);

  navLinks.forEach((link) => {
    link.addEventListener("click", () => {
      updateActiveBorder();
    });
  });

  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (
        mutation.type === "attributes" &&
        mutation.attributeName === "class"
      ) {
        updateActiveBorder();
      }
    });
  });

  navLinks.forEach((link) => {
    observer.observe(link, {
      attributes: true,
      attributeFilter: ["class"],
    });
  });
</script>
